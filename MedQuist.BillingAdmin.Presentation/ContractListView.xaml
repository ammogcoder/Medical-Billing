        <DataTemplate x:Key="listBoxTemplate">
            <StackPanel Margin="3">
                <DockPanel>
                    <!--
                        <TextBlock Text="{Binding InvoiceGrpId}"
                        DockPanel.Dock="Left"
                        Foreground="Green"
                        FontWeight="Bold">
                        </TextBlock>
                    -->
                    <TextBlock DockPanel.Dock="Right" Text="{Binding DESCR}" />
                </DockPanel>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Border Margin="0"
            Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="Gray"
            BorderThickness="3"
            CornerRadius="10"
            Padding="4">
        <Border.Effect>
            <DropShadowEffect Opacity=".50"
                              ShadowDepth="8"
                              Color="Gray" />
        </Border.Effect>
        <Grid x:Name="LayoutRoot">
            <Grid x:Name="LayoutRoot_Copy">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListBox x:Name="TheList"
                         Grid.Row="0"
                         Grid.ColumnSpan="2"
                         Background="{StaticResource WindowBackgroundBrush}"
                         dd:DragDrop.DropHandler="{Binding}"
                         dd:DragDrop.IsDragSource="False"
                         dd:DragDrop.IsDropTarget="True"
                         IsEnabled="{Binding EnablePicker,
                                             Mode=OneWay}"
                         ItemsSource="{Binding Contracts,
                                               ValidatesOnDataErrors=True,
                                               UpdateSourceTrigger=PropertyChanged}"
                         ItemTemplate="{StaticResource listBoxTemplate}"
                         PreviewMouseUp="TheList_PreviewMouseUp"
                         SelectedItem="{Binding CurrentContract,
                                                UpdateSourceTrigger=PropertyChanged,
                                                ValidatesOnExceptions=true,
                                                ValidatesOnDataErrors=true,
                                                NotifyOnValidationError=true}"
                         ToolTip="{Binding ViewTip,
                                           Mode=OneWay}" />



                <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
                    <!--  Filtered Combo box or nothing From Contract  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Content="Search:"
                               ToolTip="{Binding ContractId}" />
                        <TextBox x:Name="Search"
                                 Grid.Column="1"
                                 IsEnabled="{Binding EnablePicker,
                                                     Mode=OneWay}"
                                 Text="{Binding SearchString,
                                                UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="Refresh"
                                Grid.Column="2"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Center"
                                Panel.ZIndex="999"
                                Command="{Binding SearchCommand}"
                                IsEnabled="{Binding EnablePicker,
                                                    Mode=OneWay}">
                            <Image Source="Resources\refresh.png" />



                        </Button>

                    </Grid>
                </DockPanel>

            </Grid>
        </Grid>
    </Border>
</UserControl>
